
<h1 class="regionhead">Johto</h1> 
<div class="regiondetails">
    <% @pokemons.each do |pokemon| %>
    <div class="pokemon">
        <div class="pokemon-name">
            # <%= pokemon.entry_number %> - <%= pokemon.pokemon_species.name %>
        </div>
        <%= link_to image_tag("https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/" + pokemon.pokemon_species.url.split('/')[-1] + ".png"), "/pokemon/" + pokemon.pokemon_species.url.split('/')[-1] %>
    </div>
    <% end %>
</div>